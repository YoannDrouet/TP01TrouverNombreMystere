<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ComparerNombre</servlet-name>
        <servlet-class>fr.eni.ComparerNombre</servlet-class>
        
        <init-param>
            <param-name>BORNE_MAX</param-name>
            <param-value>10</param-value>
        </init-param>
        
        <init-param>
            <param-name>BORNE_MIN</param-name>
            <param-value>0</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ComparerNombre</servlet-name>
        <url-pattern>/ComparerNombre</url-pattern>
    </servlet-mapping>
</web-app>